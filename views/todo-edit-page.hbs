<form
  action="/{{id}}/edit"
  method="POST"
>
  <input type="text" name="title" value="{{title}}">
  <br>
  <label>
    Done:
    <input type="checkbox" name="finished"
    value="yeah it is done"
    {{#if isdone}}
      checked
    {{/if}}
    >
  </label>
  <br><br>
  <input type="submit">
  <input type="reset">
</form>